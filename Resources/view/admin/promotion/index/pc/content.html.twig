{% trans_default_domain 'products-promotion.admin.promotion' %}

<main class="main d-print-none ">

    <section class="container px-4 mb-5">

        <div class="mt-3 d-flex justify-content-between">
            {{ include(_self|replace({ "content.html.twig": "includes/breadcrumb.html.twig" })) }}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">

            <div class="w-100">
                <h1 class="h4 text-uppercase fw-bolder mb-0">
                    {{ 'page.index'|trans }}
                </h1>
            </div>

        </div>

        <div class="border border-light rounded-4 p-3">

            <div class="d-flex justify-content-between">

                {# Форма поиска по разделу #}
                {% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}

                {# Фильтр по продукции #}
                <div class="w-100 d-flex align-items-center align-content-end gap-2">

                    {% include Template('@products-product/admin/filter/'~baks_settings.device~'/filter.html.twig') %}

                    {# Фильтр по кастомным настройкам цены #}
                    {{ form_start(promotionFilter) }}
                    {{ form_widget(promotionFilter.exists, { attr: { style: 'width: 100px;' } }) }}
                    {{ form_end(promotionFilter) }}

                </div>

            </div>

            {# Текстовый результат фильтра #}
            {% include Template('@products-product/filter/'~baks_settings.device~'/filter_text.html.twig') %}

            <table class="table table-striped table-borderless mt-3"
                   style='--bs-table-striped-bg: rgba(249,249,249,0.7);'>
                <thead>

                <tr>
                    <th>#</th>
                    <th class="text-center">Категория</th>
                    <th class="ps-5 align-middle w-50">Продукция</th>
                    <th class="text-center text-nowrap " style="min-width: 200px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="text-muted" viewBox="0 0 16 16" role="tooltip" data-bs-toggle="tooltip"
                             data-bs-placement="bottom"
                             data-bs-html="true"
                             data-bs-original-title="
                             <small><strong>базовая цена</strong> - цена без применения каких-либо доп. скидок</small>
                             <br>
                             <small><strong>кастомная цена</strong> - применяется к базовой цене, но не учитывает доп. скидки</small>
                             ">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.496 6.033h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286a.237.237 0 0 0 .241.247zm2.325 6.443c.61 0 1.029-.394 1.029-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94 0 .533.425.927 1.01.927z"></path>
                        </svg>
                        Стоимость
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 150px;">Статус</th>
                </tr>

                </thead>

                <tbody>

                {% for item in query.data %}
                    {{ include(_self|replace({ "content.html.twig": "includes/card.html.twig" })) }}
                {% endfor %}

                </tbody>
            </table>

            {% include Template('_includes/'~baks_settings.device~'/pagination.html.twig') with { 'pagination' : query } %}

        </div>

    </section>

</main>